<div class="container mx-auto p-4">
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-3xl font-bold mb-4"><%= @kitten.name %></h1>

    <div class="grid md:grid-cols-2 gap-4">
      <div>
        <p><strong>Age:</strong> <%= @kitten.age %> months</p>
        <p><strong>Cuteness:</strong> <%= @kitten.cuteness %></p>
        <p><strong>Softness:</strong> <%= @kitten.softness %></p>
      </div>
      
      <div class="flex items-center justify-center">
        nothing here
      </div>
    </div>

    <div class="mt-6 flex space-x-4">
      <%= link_to 'Edit', edit_kitten_path(@kitten), class: 'btn btn-secondary' %>
      <%= link_to 'Back to All Kittens', kittens_path, class: 'btn btn-primary' %>
      <%= button_to 'Delete', kitten_path(@kitten), method: :delete, data: { confirm: 'Are you sure you want to delete this kitten?' }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>