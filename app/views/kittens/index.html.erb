<div class="container mx-auto p-4">
  <div class="flex">
  <h1 class="text-3xl font-bold mb-6">Adorable Kittens</h1>
  <%= link_to 'Add New Kitten', new_kitten_path, class: 'btn btn-primary mt-2 ml-auto bg-yellow-500 rounded-3xl px-4 py-3 font-bold' %>
  </div>
  <% if @kittens.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @kittens.each do |kitten| %>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
          <div class="p-4">
            <h2 class="text-xl font-semibold mb-2"><%= kitten.name %></h2>
            
            <div class="mb-2">
              <strong>Age:</strong> <%= kitten.age %> months
              <br>
              <strong>Cuteness:</strong> <%= kitten.cuteness %>
              <strong>Softness:</strong> <%= kitten.softness %>
            </div>

            <div class="flex justify-between items-center">
              <%= link_to 'View Details', kitten_path(kitten), class: 'btn btn-primary' %>
              <%= link_to 'Edit', edit_kitten_path(kitten), class: 'btn btn-secondary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative" role="alert">
      <p>No kittens found. Maybe it's time to add some!</p>
      <%= link_to 'Add New Kitten', new_kitten_path, class: 'btn btn-primary mt-2' %>
    </div>
  <% end %>
</div>